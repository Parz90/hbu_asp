@model IEnumerable<Spielzeugverleih.Models.ToyPic>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img height="100" width="100" src="data:image;base64,@Convert.ToBase64String(item.Picture)" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ToyPicId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ToyPicId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ToyPicId })
        </td>
    </tr>
}

</table>
